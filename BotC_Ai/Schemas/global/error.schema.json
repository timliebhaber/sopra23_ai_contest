{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for ERROR message",
  "type": "object",
  "properties": {
    "message": {
      "type": "string",
      "const": "ERROR"
    },
    "data": {
      "type": "object",
      "properties": {
        "reason": {
          "type": "string"
        },
        "errorCode": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        }
      },
      "required": [
        "reason",
        "errorCode"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "message",
    "data"
  ],
  "additionalProperties": false
}